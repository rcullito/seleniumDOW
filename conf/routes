# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET 	/welcome					controllers.Users.index
POST 	/users						controllers.Users.submitForm

GET 	/emails						controllers.Users.fetchEmails
GET		/user/:email				controllers.Users.fetchByEmail(email: String)

POST     /showtime     			    controllers.Users.showtime

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
